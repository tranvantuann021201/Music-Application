<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_music_small"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:background="@color/mainColor" />

    <TextView
        android:id="@+id/txv_name_song"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/img_music_small"
        android:text="Tên bài hát"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv_artist_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nghệ sĩ"
        android:layout_below="@+id/txv_name_song"
        android:layout_toEndOf="@+id/img_music_small"
        android:layout_marginTop="2dp"
        />

    <ImageView
        android:id="@+id/img_ntf_next_song"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_fwd_dark" />
    <ImageView
        android:id="@+id/img_ntf_play_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_pause_black_large"
        android:layout_toStartOf="@id/img_ntf_next_song"
        />
    <ImageView
        android:id="@+id/img_ntf_pre_song"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_rew_dark"
        android:layout_toStartOf="@id/img_ntf_play_pause"
        />
</RelativeLayout>