<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_music_small"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="@color/mainColor" />

    <TextView
        android:id="@+id/txv_name_song"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/img_music_small"
        android:maxLength="20"
        android:ellipsize="end"
        android:text="Tên bài hát" />

    <TextView
        android:id="@+id/txv_artist_song"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv_name_song"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/img_music_small"
        android:maxLength="25"
        android:ellipsize="end"
        android:text="Nghệ sĩ" />

    <ImageView
        android:id="@+id/img_ntf_next_song"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_fwd_dark" />
    <ImageView
        android:id="@+id/img_ntf_play_pause"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_pause_black_large"
        android:layout_toStartOf="@id/img_ntf_next_song"
        />

    <ImageView
        android:id="@+id/img_ntf_pre_song"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@id/img_ntf_play_pause"
        android:src="@drawable/ic_rew_dark" />
</RelativeLayout>